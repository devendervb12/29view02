<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
    
     <Page title="Employee Registration Form" showNavButton="true">
       <content>         
          <form:SimpleForm>
             <form:title>
                 <core:Title text="Please Enter Employee Details"/>
             </form:title>
             
             <form:content>
                 <Label text="Employee Name"/>
          		 <Input/>
          		 <Button text="Register"/>
		          <ComboBox>
		             <items>
		               <core:Item text="SAP"/>
		               <core:Item text="Oracle"/>
		               <core:Item text="JAVA"/>
		             </items>
		          </ComboBox>   
             </form:content>
             
          </form:SimpleForm> 
              
       </content>
     </Page>
     
</mvc:View>






